{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Workout Buddy",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/WorkoutBuddy/bin/Debug/net7.0/WorkoutBuddy.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/WorkoutBuddy",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      // open swagger on launch:
      // "serverReadyAction": {
      //   "action": "openExternally",
      //   "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
      //   "uriFormat": "%s/swagger"
      // },
      // open web app on launch:
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http?://\\S+)",
        "uriFormat": "%s/"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Local",
        "GOOGLE_APPLICATION_CREDENTIALS": "./firebase-config.json"
      }
    },
    {
      "name": "Watch Workout Buddy",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch",
      "program": "${workspaceFolder}/src/WorkoutBuddy/bin/Debug/net7.0/WorkoutBuddy.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/WorkoutBuddy",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      // open swagger on launch:
      // "serverReadyAction": {
      //   "action": "openExternally",
      //   "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
      //   "uriFormat": "%s/swagger"
      // },
      // open web app on launch:
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http?://\\S+)",
        "uriFormat": "%s/"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Local",
        "GOOGLE_APPLICATION_CREDENTIALS": "./firebase-config.json"
      }
    },
    {
      "name": "Initialise DB",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/WorkoutBuddy/bin/Debug/net7.0/WorkoutBuddy.dll",
      "args": ["initAndSeedDb"],
      "cwd": "${workspaceFolder}/src/WorkoutBuddy",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Local",
        "GOOGLE_APPLICATION_CREDENTIALS": "./firebase-config.json"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
